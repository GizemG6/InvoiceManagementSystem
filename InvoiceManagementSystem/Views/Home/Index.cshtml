@model InvoiceManagementSystem.Models.Entities.User

<h2>Login</h2>

@if (ViewBag.ShowError == true)
{
    <div class="text-danger">Invalid login attempt.</div>
}

<form asp-action="UserLogin" method="post">
    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
        <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
        <label for="floatingPassword">Password</label>
    </div>
    <button type="submit">Login</button>
</form>

