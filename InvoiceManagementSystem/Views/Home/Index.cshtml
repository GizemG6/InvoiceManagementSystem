@model InvoiceManagementSystem.Models.Entities.LoginUser

<h2>Giriş Sayfası</h2>

@if (ViewBag.ShowError == true)
{
    <div class="text-danger">Invalid login attempt.</div>
}

<form asp-action="UserLogin" method="post">
    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com" />
        <label for="floatingInput">Email adresi</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
        <label for="floatingPassword">Şifre</label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit">Gir</button>
</form>

